<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="40dp"
        android:drawableTop="@drawable/empty_box"
        android:textAlignment="center"
        android:text="Chat history not found. Please add chats from Line or import data." />

    <android.support.v7.widget.ListViewCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/chat_list_view"
        android:name="com.orengesunshine.chatory.ui.ChatListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.orengesunshine.chatory.ui.ChatListFragment"
        tools:listitem="@layout/fragment_chat_list_item" />
</RelativeLayout>

